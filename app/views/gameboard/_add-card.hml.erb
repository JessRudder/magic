<%# if referral_code? || coupon_code? %>
  <script type="text/javascript">
    console.log("Hello!");
    $(function(){
      setTimeout(function(){
        $(".referral-modal").modal();
      }, 1000)
    });
  </script>

  <div class="modal fade referral-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title">Add a New Card</h4>
        </div>

        <%= bootstrap_form_tag(:url => card_path, :layout => :horizontal, :remote => true) do |f| %>
          <div class="modal-body">
            <p class="lead">Congrats, you received a discount. Confirm your name and email and we'll apply a <strong><%= number_to_currency(discount_object.discount_value) %></strong> discount when you enroll.</p>

            <%= f.text_field :set, :required => true %>
            <%= f.collection_select(:set, Card.all, :id, :set) %>
            <%= f.text_field :title, :required => true %>
          </div>
          <div class="modal-footer">
            <%= f.submit "Submit", :class => "btn btn-primary" %>
          </div>
        <% end %>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<%# end %>